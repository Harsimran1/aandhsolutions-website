---
import '../styles/global.css';
import '../styles/transitions.css';
import { ClientRouter } from 'astro:transitions';
import { DEFAULT_LOCALE, getAbsoluteLocaleUrl, resolveLocale, getOgLocale, SUPPORTED_LOCALES } from '../lib/i18n';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
}

const { 
  title, 
  description = "Modern SaaS landing page template with responsive design and modular sections.",
  keywords = "aandhsolutions, A&H Solutions, custom app development, AI integrations, web development, mobile apps",
  ogImage = "/og-image.jpg"
} = Astro.props;

const currentLocale = resolveLocale(Astro.currentLocale, new URL(Astro.request.url).pathname);
const canonicalUrl = getAbsoluteLocaleUrl(Astro.site?.toString() ?? 'https://www.aandhsolutions.com', currentLocale, Astro.url.pathname);
const hrefLangLinks = SUPPORTED_LOCALES.map((locale) => ({
  locale,
  href: getAbsoluteLocaleUrl(Astro.site?.toString() ?? 'https://www.aandhsolutions.com', locale, Astro.url.pathname),
}));
const xDefaultHref = getAbsoluteLocaleUrl(Astro.site?.toString() ?? 'https://www.aandhsolutions.com', DEFAULT_LOCALE, Astro.url.pathname);
const ogLocale = getOgLocale(currentLocale);
---

<!doctype html>
<html lang={currentLocale} x-data="{ darkMode: localStorage.getItem('darkMode') === 'true' }" x-init="$watch('darkMode', val => localStorage.setItem('darkMode', val))" :class="{ 'dark': darkMode }">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="A&H Solutions" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />
    {hrefLangLinks.map((item) => (
      <link rel="alternate" hreflang={item.locale} href={item.href} />
    ))}
    <link rel="alternate" hreflang="x-default" href={xDefaultHref} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`https://www.aandhsolutions.com${ogImage}`} />
    <meta property="og:site_name" content="A&H Solutions" />
    <meta property="og:locale" content={ogLocale} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@aandhsolutions" />
    <meta name="twitter:creator" content="@aandhsolutions" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`https://www.aandhsolutions.com${ogImage}`} />
    <meta name="twitter:url" content={canonicalUrl} />
    
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Lexend:wght@400;500;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Lexend:wght@400;500;600;700&display=swap" rel="stylesheet"></noscript>
    
    <!-- Performance optimizations -->
    <link rel="dns-prefetch" href="//www.googletagmanager.com">
    <link rel="dns-prefetch" href="//www.google-analytics.com">
    <link rel="dns-prefetch" href="//www.google.com">
    <link rel="preconnect" href="https://www.googletagmanager.com">
    <link rel="preconnect" href="https://www.google-analytics.com">
    <link rel="preload" href="/scripts/transitions.js" as="script">
    <meta name="format-detection" content="telephone=no">
    <meta name="theme-color" content="#8b5cf6">
    
    <!-- Google Analytics (Deferred) -->
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      
      // Defer GA loading until after page load
      window.addEventListener('load', function() {
        const script = document.createElement('script');
        script.async = true;
        script.src = 'https://www.googletagmanager.com/gtag/js?id=G-0PMZ38H9GR';
        document.head.appendChild(script);
        
        script.onload = function() {
          gtag('js', new Date());
          gtag('config', 'G-0PMZ38H9GR');
        };
      });
    </script>
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ProfessionalService",
      "name": "A&H Solutions",
      "alternateName": "aandhsolutions",
      "url": "https://www.aandhsolutions.com",
      "logo": "https://www.aandhsolutions.com/logo.png",
      "image": "https://www.aandhsolutions.com/og-image.jpg",
      "sameAs": [
        "https://www.linkedin.com/company/aandhsolutions",
        "https://github.com/aandhsolutions"
      ],
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "url": "https://www.aandhsolutions.com/contact"
      },
      "description": "A&H Solutions builds custom apps, web platforms, and AI integrations for startups and enterprises.",
      "foundingDate": "2020",
      "priceRange": "$$",
      "knowsAbout": [
        "Custom App Development",
        "AI Integrations",
        "Web Development",
        "Mobile App Development",
        "Cloud Solutions",
        "Data Analytics",
        "Software Development"
      ],
      "areaServed": "Worldwide"
    }
    </script>
    
    <ClientRouter />
    
    <!-- Allow additional head content from pages -->
    <slot name="head" />
  </head>
  <body class="antialiased bg-white dark:bg-secondary-950 text-secondary-900 dark:text-secondary-100 transition-colors duration-300">
    <div id="page-wrapper" class="page-transition-wrapper">
      <slot />
    </div>
    <script>
      const supportedLocales = ['en', 'fr', 'de', 'es'];

      function localizeInternalLinks() {
        const segments = window.location.pathname.split('/').filter(Boolean);
        const activeLocale = segments[0];

        if (!supportedLocales.includes(activeLocale)) {
          return;
        }

        const skipPrefixes = ['/favicon', '/scripts', '/logo', '/og-image', '/assets'];
        const localePrefixPattern = /^\/(en|fr|de|es)(\/|$|#|\?)/;

        document.querySelectorAll('a[href^="/"]').forEach((link) => {
          const href = link.getAttribute('href');
          if (!href) return;
          if (href.startsWith('//')) return;
          if (skipPrefixes.some((prefix) => href.startsWith(prefix))) return;

          // Keep language switcher targets untouched.
          if (link.hasAttribute('data-preserve-locale-link')) return;

          // If link is already locale-prefixed, normalize it to the active locale.
          if (localePrefixPattern.test(href)) {
            const url = new URL(href, window.location.origin);
            url.pathname = url.pathname.replace(/^\/(en|fr|de|es)(?=\/|$)/, `/${activeLocale}`);
            link.setAttribute('href', `${url.pathname}${url.search}${url.hash}`);
            return;
          }

          link.setAttribute('href', `/${activeLocale}${href}`);
        });
      }

      function hydrateLazyImages() {
        document.querySelectorAll('img[loading="lazy"]').forEach((img) => {
          if (img.complete) {
            img.classList.add('loaded');
            return;
          }

          img.addEventListener('load', () => img.classList.add('loaded'), { once: true });
        });
      }

      // Check for user preference
      if (localStorage.getItem('darkMode') === null) {
        // Check system preference
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          localStorage.setItem('darkMode', 'true');
          document.documentElement.classList.add('dark');
        } else {
          localStorage.setItem('darkMode', 'false');
        }
      }

      // Handle page transitions
      document.addEventListener('astro:page-load', () => {
        localizeInternalLinks();
        hydrateLazyImages();
        // This runs on initial page load and after each navigation
        const pageWrapper = document.getElementById('page-wrapper');
        if (pageWrapper) {
          pageWrapper.classList.add('page-loaded');
        }
      });

      document.addEventListener('astro:before-swap', () => {
        // This runs before the new page content is swapped in
        const pageWrapper = document.getElementById('page-wrapper');
        if (pageWrapper) {
          pageWrapper.classList.remove('page-loaded');
        }
      });

      localizeInternalLinks();
      hydrateLazyImages();
    </script>
    <script src="/scripts/transitions.js" defer></script>
  </body>
</html>
