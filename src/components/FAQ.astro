---

<section class="section">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-warning-100 dark:bg-warning-900 text-warning-600 dark:text-warning-300 font-medium text-sm mb-4">
        {text.badge}
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">{text.title}</h2>
      <p class="text-gray-600 dark:text-gray-300">
        {text.desc}
      </p>
    </div>
    
    <div class="max-w-3xl mx-auto">
      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <div 
            class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden slide-up"
            style={`animation-delay: ${index * 100}ms`}
          >
            <button 
              class="w-full px-8 py-6 text-left focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-inset"
              onclick={`this.parentElement.classList.toggle('active')`}
              x-data={`{ open: false }`}
              @click="open = !open"
            >
              <div class="flex items-center justify-between">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                  {faq.question}
                </h3>
                <svg 
                  class="w-5 h-5 text-gray-500 dark:text-gray-400 transform transition-transform duration-200"
                  :class="{ 'rotate-180': open }"
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </div>
            </button>
            
            <div 
              class="px-8 pb-6 text-gray-600 dark:text-gray-300 hidden"
              x-show="open"
              x-transition:enter="transition ease-out duration-200"
              x-transition:enter-start="opacity-0 transform -translate-y-2"
              x-transition:enter-end="opacity-100 transform translate-y-0"
            >
              {faq.answer}
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="mt-12 text-center">
      <div class="text-gray-900 dark:text-white mb-6">
        <div class="text-2xl font-bold mb-2">{text.still}</div>
        <p class="text-gray-600 dark:text-gray-300">{text.touch}</p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="tel:+8254369647" 
          class="inline-flex items-center px-6 py-3 rounded-lg font-medium bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
