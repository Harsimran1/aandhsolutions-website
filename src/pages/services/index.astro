---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';
import { getCollection } from 'astro:content';

const services = await getCollection('services', ({ data }) => {
  return !data.draft;
});

// Sort services by published date (newest first)
services.sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime());

const categories = [...new Set(services.map(service => service.data.category).filter(Boolean))];
---

<Layout title="Services - A&H Solutions" description="Professional software development services from A&H Solutions. Custom web applications, mobile apps, cloud solutions, and more.">
  <Header />
  <main>
    <HeroSection 
      title="Our Services" 
      highlightText="Services"
      description="Comprehensive software development solutions to help your business thrive in the digital age."
    />
    
    <section class="py-16 bg-white dark:bg-gray-800">
      <div class="container-custom">
        {services.length > 0 ? (
          <>
            <!-- Category Filter -->
            {categories.length > 0 && (
              <div class="flex flex-wrap gap-4 justify-center mb-16">
                <button class="px-4 py-2 rounded-full bg-primary-600 text-white font-medium text-sm hover:bg-primary-700 transition-colors">
                  All Services
                </button>
                {categories.map((category) => (
                  <button class="px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                    {category}
                  </button>
                ))}
              </div>
            )}

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {services.map((service, index) => (
                <div class="card border border-gray-200 dark:border-gray-700 overflow-hidden slide-up" style={'animation-delay: ' + (index * 100) + 'ms'}>
                  <a href={'/services/' + service.slug} class="block">
                    {service.data.image ? (
                      <img 
                        src={service.data.image} 
                        alt={service.data.imageAlt || service.data.title}
                        class="w-full h-48 object-cover"
                        loading="lazy"
                      />
                    ) : (
                      <div class="w-full h-48 bg-gradient-to-br from-primary-500 to-secondary-500 flex items-center justify-center">
                        <span class="text-white text-xl font-semibold">{service.data.title}</span>
                      </div>
                    )}
                  </a>
                  <div class="p-6">
                    <div class="flex items-center mb-4">
                      {service.data.category && (
                        <>
                          <span class="text-sm font-medium text-primary-600 dark:text-primary-400">{service.data.category}</span>
                          <span class="mx-2 text-gray-300 dark:text-gray-600">â€¢</span>
                        </>
                      )}
                      {service.data.pricing && service.data.pricing.startingPrice && (
                        <span class="text-sm text-gray-500 dark:text-gray-400">Starting at {service.data.pricing.startingPrice}</span>
                      )}
                    </div>
                    <a href={'/services/' + service.slug} class="block mb-3">
                      <h2 class="text-xl font-semibold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors">{service.data.title}</h2>
                    </a>
                    <p class="text-gray-600 dark:text-gray-300 mb-6">{service.data.excerpt || service.data.description || ''}</p>
                    
                    {service.data.technologies && service.data.technologies.length > 0 && (
                      <div class="flex flex-wrap gap-2 mb-4">
                        {service.data.technologies.slice(0, 3).map((tech) => (
                          <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded-full">
                            {tech}
                          </span>
                        ))}
                        {service.data.technologies.length > 3 && (
                          <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded-full">
                            +{service.data.technologies.length - 3} more
                          </span>
                        )}
                      </div>
                    )}

                    <div class="flex items-center justify-between">
                      <div class="flex items-center">
                        {service.data.author.avatar && (
                          <img 
                            src={service.data.author.avatar} 
                            alt={service.data.author.name} 
                            class="w-8 h-8 rounded-full mr-2 object-cover"
                            loading="lazy"
                          />
                        )}
                        <div>
                          <p class="text-sm font-medium text-gray-900 dark:text-white">{service.data.author.name}</p>
                        </div>
                      </div>
                      <a href={'/services/' + service.slug} class="btn-outline btn-sm">
                        Learn More
                      </a>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </>
        ) : (
          <div class="text-center py-16">
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">Services Coming Soon</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
              We're currently updating our services documentation. Contact us to discuss how we can help with your specific needs.
            </p>
            <a href="/contact" class="btn-primary">Get in Touch</a>
          </div>
        )}
        
        <div class="mt-16 text-center">
          <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">Need a Custom Solution?</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
            Don't see exactly what you're looking for? We specialize in creating custom software solutions tailored to your unique requirements.
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a href="/contact" class="btn-primary">Discuss Your Project</a>
            <a href="/case-study" class="btn-secondary">View Our Work</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>