---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CaseStudySlider from '../../components/CaseStudySlider.astro';
import { getCollection } from 'astro:content';
import { resolveLocale, localizePath } from '../../lib/i18n';
import { getLocaleCopy } from '../../i18n/locale-copy';

const { caseStudy } = Astro.props;
const { Content } = await caseStudy.render();

const locale = resolveLocale(Astro.currentLocale, new URL(Astro.request.url).pathname);
const copy = getLocaleCopy(locale);
const casePageCopy = copy.pages.caseStudies ?? {};
const caseContent = copy.content?.caseStudies ?? {};
const caseCopy = caseContent[caseStudy.slug] ?? {};
const localizedTitle = caseCopy.title || caseStudy.data.title;
const localizedDescription = caseCopy.description || caseCopy.excerpt || caseStudy.data.description || caseStudy.data.excerpt || caseStudy.data.title;

const services = await getCollection('services', (service) => {
  return !service.data.draft && caseStudy.data.relatedServices?.includes(service.slug);
});

const domains = await getCollection('domains', (domain) => {
  return !domain.data.draft && caseStudy.data.relatedDomains?.includes(domain.slug);
});

const relatedCaseStudies = await getCollection('case-studies', ({ data }) => {
  return !data.draft && data.client?.industry === caseStudy.data.client?.industry && data.title !== caseStudy.data.title;
});

function getYouTubeEmbed(url) {
  if (!url) return null;
  try {
    const parsed = new URL(url);
    if (parsed.hostname.includes('youtu.be')) {
      const id = parsed.pathname.slice(1);
      if (!id) return null;
      return `https://www.youtube.com/embed/${id}?autoplay=1&mute=1&controls=1&rel=0&playsinline=1`;
    }
    if (parsed.hostname.includes('youtube.com')) {
      if (parsed.pathname.startsWith('/embed/')) {
        return `${parsed.origin}${parsed.pathname}?autoplay=1&mute=1&controls=1&rel=0&playsinline=1`;
      }
      const id = parsed.searchParams.get('v');
      if (!id) return null;
      return `https://www.youtube.com/embed/${id}?autoplay=1&mute=1&controls=1&rel=0&playsinline=1`;
    }
  } catch (_) {
    return null;
  }
  return null;
}

const DATE_LOCALE: Record<string, string> = {
  en: 'en-US',
  fr: 'fr-FR',
  de: 'de-DE',
  es: 'es-ES',
};
---

<Layout title={`${localizedTitle} - A&H Solutions Case Studies`} description={localizedDescription}>
  <Header />
  <main>
    <article class="pt-32 pb-16 md:pt-40 md:pb-24">
      <div class="container-custom max-w-6xl">
        <div class="mb-8">
          <a href={localizePath('/case-studies', locale)} class="inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            {casePageCopy.backToCaseStudies || 'Back to Case Studies'}
          </a>
        </div>

        <div class="flex items-center mb-6">
          {caseStudy.data.client && (
            <>
              <span class="inline-block px-3 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm">
                {caseStudy.data.client.industry}
              </span>
              <span class="mx-2 text-gray-300 dark:text-gray-600">â€¢</span>
            </>
          )}
          <span class="text-gray-600 dark:text-gray-400">{caseStudy.data.publishedAt.toLocaleDateString(DATE_LOCALE[locale] || 'en-US')}</span>
        </div>

        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-gray-900 dark:text-white">{localizedTitle}</h1>

        {(caseCopy.excerpt || caseStudy.data.excerpt) && (
          <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">{caseCopy.excerpt || caseStudy.data.excerpt}</p>
        )}

        <div class="flex items-center mb-8">
          {caseStudy.data.author.avatar && (
            <img
              src={caseStudy.data.author.avatar}
              alt={caseStudy.data.author.name}
              class="w-12 h-12 rounded-full mr-4 object-cover"
            />
          )}
          <div>
            <p class="font-semibold text-gray-900 dark:text-white">{caseStudy.data.author.name}</p>
            <p class="text-gray-600 dark:text-gray-400">{casePageCopy.teamLabel || 'A&H Solutions Team'}</p>
          </div>
        </div>

        {caseStudy.data.videoUrl ? (
          <div class="rounded-xl mb-10 overflow-hidden bg-black">
            <div class="relative w-full" style="padding-top: 56.25%;">
              <iframe
                class="absolute inset-0 w-full h-full"
                src={getYouTubeEmbed(caseStudy.data.videoUrl)}
                title={`${localizedTitle} video`}
                frameborder="0"
                allow="autoplay; encrypted-media; picture-in-picture"
                allowfullscreen
              ></iframe>
            </div>
          </div>
        ) : caseStudy.data.image && (
          <div class="rounded-xl mb-10 overflow-hidden">
            <CaseStudySlider
              images={caseStudy.data.gallery && caseStudy.data.gallery.length > 0 ? caseStudy.data.gallery : [caseStudy.data.image]}
              altBase={caseStudy.data.imageAlt || localizedTitle}
              maxHeight="500px"
            />
          </div>
        )}

        <div class="grid lg:grid-cols-4 gap-8 mb-12">
          <div class="lg:col-span-3">
            <div class="prose prose-lg dark:prose-invert max-w-none">
              {caseCopy.bodyHtml ? (
                <Fragment set:html={caseCopy.bodyHtml} />
              ) : (
                <Content />
              )}
            </div>
          </div>

          <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-xl">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{casePageCopy.projectDetails || 'Project Details'}</h3>

            {caseStudy.data.client && (
              <div class="mb-6">
                <h4 class="font-medium text-gray-900 dark:text-white mb-3">{casePageCopy.clientLabel || 'Client'}</h4>
                <div class="space-y-2">
                  <p class="text-sm font-medium text-gray-900 dark:text-white">{caseStudy.data.client.name}</p>
                  <p class="text-sm text-gray-600 dark:text-gray-300">{caseStudy.data.client.industry}</p>
                  {caseStudy.data.client.website && (
                    <a href={caseStudy.data.client.website} target="_blank" rel="noopener noreferrer" class="text-sm text-primary-600 dark:text-primary-400 hover:underline">
                      {casePageCopy.visitWebsite || 'Visit Website'}
                    </a>
                  )}
                </div>
              </div>
            )}

            {caseStudy.data.technologies && caseStudy.data.technologies.length > 0 && (
              <div class="mb-6">
                <h4 class="font-medium text-gray-900 dark:text-white mb-3">{casePageCopy.technologiesUsed || 'Technologies Used'}</h4>
                <div class="flex flex-wrap gap-2">
                  {caseStudy.data.technologies.map((tech) => (
                    <span class="px-3 py-1 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-sm rounded-full border border-gray-200 dark:border-gray-600">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            )}

            {caseStudy.data.results && caseStudy.data.results.timeline && (
              <div class="mb-6">
                <h4 class="font-medium text-gray-900 dark:text-white mb-3">{casePageCopy.projectTimeline || 'Project Timeline'}</h4>
                <p class="text-sm text-gray-600 dark:text-gray-300">{caseStudy.data.results.timeline}</p>
              </div>
            )}

            <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
              <a href={localizePath('/contact', locale)} class="btn-primary w-full text-center">{casePageCopy.startYourProject || 'Start Your Project'}</a>
              <a href={localizePath('/services', locale)} class="btn-outline w-full text-center mt-3">{casePageCopy.viewOurServices || 'View Our Services'}</a>
            </div>
          </div>
        </div>

        {caseStudy.data.results && caseStudy.data.results.metrics && caseStudy.data.results.metrics.length > 0 && (
          <div class="mb-12">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">{casePageCopy.projectResults || 'Project Results'}</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
              {caseStudy.data.results.metrics.map((metric) => (
                <div class="text-center p-6 bg-primary-50 dark:bg-primary-900/20 rounded-xl">
                  <div class="text-3xl font-bold text-primary-600 dark:text-primary-400 mb-2">{metric.value}</div>
                  <div class="text-sm text-gray-600 dark:text-gray-300">{metric.label}</div>
                </div>
              ))}
            </div>
          </div>
        )}

        {caseStudy.data.results && caseStudy.data.results.testimonial && (
          <div class="mb-12 p-8 bg-gray-50 dark:bg-gray-800 rounded-xl">
            <blockquote class="text-lg text-gray-700 dark:text-gray-300 italic mb-4">
              "{caseStudy.data.results.testimonial.quote}"
            </blockquote>
            <div class="flex items-center">
              <div>
                <cite class="font-semibold text-gray-900 dark:text-white not-italic">
                  {caseStudy.data.results.testimonial.author}
                </cite>
                {caseStudy.data.results.testimonial.position && (
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    {caseStudy.data.results.testimonial.position}
                    {caseStudy.data.results.testimonial.company && `, ${caseStudy.data.results.testimonial.company}`}
                  </p>
                )}
              </div>
            </div>
          </div>
        )}

        {services.length > 0 && (
          <div class="mb-12">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">{casePageCopy.relatedServices || 'Related Services'}</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              {services.map((service) => (
                <div class="card border border-gray-200 dark:border-gray-700 p-6">
                  <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                    <a href={localizePath(`/services/${service.slug}`, locale)} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                      {service.data.title}
                    </a>
                  </h4>
                  <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">{service.data.excerpt || service.data.description}</p>
                  <a href={localizePath(`/services/${service.slug}`, locale)} class="btn-outline btn-sm">{casePageCopy.learnMore || 'Learn More'}</a>
                </div>
              ))}
            </div>
          </div>
        )}

        {domains.length > 0 && (
          <div class="mb-12">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">{casePageCopy.relatedIndustries || 'Related Industries'}</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              {domains.map((domain) => (
                <div class="card border border-gray-200 dark:border-gray-700 p-6">
                  <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                    <a href={localizePath(`/domains/${domain.slug}`, locale)} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                      {domain.data.title}
                    </a>
                  </h4>
                  <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">{domain.data.excerpt || domain.data.description}</p>
                  <a href={localizePath(`/domains/${domain.slug}`, locale)} class="btn-outline btn-sm">{casePageCopy.learnMore || 'Learn More'}</a>
                </div>
              ))}
            </div>
          </div>
        )}

        {relatedCaseStudies.length > 0 && (
          <div class="mb-12">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">{casePageCopy.moreCaseStudiesPrefix || 'More'} {caseStudy.data.client?.industry} {casePageCopy.moreCaseStudiesSuffix || 'Case Studies'}</h3>
            <div class="grid md:grid-cols-2 gap-6">
              {relatedCaseStudies.map((relatedCase) => {
                const relatedCopy = caseContent[relatedCase.slug] ?? {};
                return (
                  <div class="card border border-gray-200 dark:border-gray-700 p-6">
                    <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                      <a href={localizePath(`/case-studies/${relatedCase.slug}`, locale)} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                        {relatedCopy.title || relatedCase.data.title}
                      </a>
                    </h4>
                    <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">{relatedCopy.excerpt || relatedCopy.description || relatedCase.data.excerpt || relatedCase.data.description}</p>
                    {relatedCase.data.results && relatedCase.data.results.metrics && relatedCase.data.results.metrics.length > 0 && (
                      <div class="flex flex-wrap gap-2 mb-4">
                        {relatedCase.data.results.metrics.slice(0, 2).map((metric) => (
                          <span class="px-2 py-1 bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300 text-xs rounded-full">{metric.value}</span>
                        ))}
                      </div>
                    )}
                    <a href={localizePath(`/case-studies/${relatedCase.slug}`, locale)} class="btn-outline btn-sm">{casePageCopy.readCaseStudy || 'Read Case Study'}</a>
                  </div>
                );
              })}
            </div>
          </div>
        )}

        {caseStudy.data.tags && caseStudy.data.tags.length > 0 && (
          <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
            <h3 class="text-xl font-semibold mb-6 text-gray-900 dark:text-white">{casePageCopy.tagsLabel || 'Tags'}</h3>
            <div class="flex flex-wrap gap-2">
              {caseStudy.data.tags.map((tag) => (
                <span class="px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        )}
      </div>
    </article>
  </main>
  <Footer />
</Layout>
