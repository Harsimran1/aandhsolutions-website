---
import { resolveLocale, localizePath } from '../lib/i18n';
import { getLocaleCopy } from '../i18n/locale-copy';

const locale = resolveLocale(Astro.currentLocale, new URL(Astro.request.url).pathname);
const localized = (path: string) => localizePath(path, locale);

const copy = getLocaleCopy(locale);
const text = copy.pages.contactForm ?? getLocaleCopy('en').pages.contactForm;
---
<section id="contact" class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container-custom">
    <div class="grid md:grid-cols-2 gap-12">
      <div class="slide-up">
        <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
          {text.badge}
        </span>
        <h2 class="mb-6 text-gray-900 dark:text-white">{text.title}</h2>
        <p class="text-gray-600 dark:text-gray-300 mb-8">
          {text.desc}
        </p>

        <div class="space-y-6">
          <div class="flex items-start">
            <div class="shrink-0 mt-1">
              <svg class="w-6 h-6 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{text.emailUs}</h3>
              <p class="text-gray-600 dark:text-gray-300">contact@aandhsolutions.com</p>
            </div>
          </div>

          <div class="grid sm:grid-cols-2 gap-4">
            <div class="rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800/70 p-4 shadow-sm">
              <div class="flex items-center gap-2 mb-3">
                <div class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-primary-50 dark:bg-primary-900/40 text-primary-600 dark:text-primary-300">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{text.usOffice}</h3>
              </div>
              <p class="text-gray-600 dark:text-gray-300 font-medium flex items-center gap-2">
                <svg class="w-4 h-4 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                805-394-3014
              </p>
              <p class="text-gray-600 dark:text-gray-300">1209 Mountain Road PL NE</p>
              <p class="text-gray-600 dark:text-gray-300">Albuquerque, NM 87110</p>
            </div>

            <div class="rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800/70 p-4 shadow-sm">
              <div class="flex items-center gap-2 mb-3">
                <div class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-accent-50 dark:bg-accent-900/40 text-accent-600 dark:text-accent-300">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{text.caOffice}</h3>
              </div>
              <p class="text-gray-600 dark:text-gray-300 font-medium flex items-center gap-2">
                <svg class="w-4 h-4 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                825-436-9647
              </p>
              <p class="text-gray-600 dark:text-gray-300">10107 Jasper Ave</p>
              <p class="text-gray-600 dark:text-gray-300">Edmonton, AB T5J 1W8</p>
            </div>
          </div>
        </div>
      </div>

      <div class="slide-up" style="animation-delay: 150ms">
        <div class="bg-gradient-to-r from-primary-50 to-accent-50 dark:from-primary-950/50 dark:to-accent-950/50 border border-primary-200 dark:border-primary-800 rounded-xl p-6 mb-8">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                üéÅ {text.ctaTitle}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">
                {text.ctaDesc}
              </p>
              <a href={localized('/free-project-blueprint')} class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium text-sm">
                {text.ctaLink} ‚Üí
              </a>
            </div>
            <div class="ml-6 text-4xl">üìã</div>
          </div>
        </div>

        <div class="card p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-semibold mb-6 text-gray-900 dark:text-white">{text.formTitle}</h3>

          <form
            action="https://formspree.io/f/mgebepdz"
            method="POST"
            data-astro-reload
            @submit="handleSubmit($event)"
            x-data={`{
              name: '',
              email: '',
              message: '',
              company: '',
              projectType: '',
              submitted: false,
              errors: {},
              isSubmitting: false,
              init() {
                if (new URLSearchParams(window.location.search).get('success') === 'true') {
                  this.submitted = true;
                  window.history.replaceState({}, '', window.location.pathname);
                }
              },
              handleSubmit(event) {
                this.errors = {};
                let hasErrors = false;

                if (!this.name.trim()) {
                  this.errors.name = ${JSON.stringify(text.validationNameRequired)};
                  hasErrors = true;
                }

                if (!this.email.trim()) {
                  this.errors.email = ${JSON.stringify(text.validationEmailRequired)};
                  hasErrors = true;
                } else if (!this.email.includes('@')) {
                  this.errors.email = ${JSON.stringify(text.validationEmailInvalid)};
                  hasErrors = true;
                }

                if (!this.message.trim()) {
                  this.errors.message = ${JSON.stringify(text.validationMessageRequired)};
                  hasErrors = true;
                }

                if (hasErrors) {
                  event.preventDefault();
                  return false;
                }

                this.isSubmitting = true;

                setTimeout(() => {
                  if (new URLSearchParams(window.location.search).get('success') === 'true') {
                    this.submitted = true;
                    this.isSubmitting = false;
                  }
                }, 1000);

                return true;
              }
            }`}
          >
            <div class="mb-4">
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">{text.nameLabel}</label>
              <input
                type="text"
                id="name"
                name="name"
                x-model="name"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder={text.namePlaceholder}
                required
              />
              <p class="text-red-500 text-sm mt-1" x-show="errors.name" x-text="errors.name"></p>
            </div>

            <div class="mb-4">
              <label for="contact-email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">{text.emailLabel}</label>
              <input
                type="email"
                id="contact-email"
                name="email"
                x-model="email"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder={text.emailPlaceholder}
                required
              />
              <p class="text-red-500 text-sm mt-1" x-show="errors.email" x-text="errors.email"></p>
            </div>

            <div class="mb-4">
              <label for="company" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">{text.companyLabel}</label>
              <input
                type="text"
                id="company"
                name="company"
                x-model="company"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder={text.companyPlaceholder}
              />
            </div>

            <div class="mb-4">
              <label for="project-type" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">{text.projectTypeLabel}</label>
              <select
                id="project-type"
                name="project-type"
                x-model="projectType"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
              >
                <option value="">{text.projectTypePlaceholder}</option>
                <option value="mobile-app">{text.projectTypeMobileApp}</option>
                <option value="web-app">{text.projectTypeWebApp}</option>
                <option value="ai-integration">{text.projectTypeAiIntegration}</option>
                <option value="data-analytics">{text.projectTypeDataAnalytics}</option>
                <option value="cloud-solutions">{text.projectTypeCloudSolutions}</option>
                <option value="it-consulting">{text.projectTypeItConsulting}</option>
                <option value="other">{text.projectTypeOther}</option>
              </select>
            </div>

            <div class="mb-6">
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">{text.messageLabel}</label>
              <textarea
                id="message"
                name="message"
                x-model="message"
                rows="5"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder={text.messagePlaceholder}
                required
              ></textarea>
              <p class="text-red-500 text-sm mt-1" x-show="errors.message" x-text="errors.message"></p>
            </div>

            <div class="mb-4" x-show="errors.general">
              <p class="text-red-500 text-sm" x-text="errors.general"></p>
            </div>

            <div x-show="!submitted">
              <button
                type="submit"
                class="w-full btn-primary"
                :disabled="isSubmitting"
                :class="{ 'opacity-50 cursor-not-allowed': isSubmitting }"
              >
                <span x-show="!isSubmitting">{text.submit}</span>
                <span x-show="isSubmitting">{text.submitting}</span>
              </button>
            </div>

            <div class="text-center p-6 bg-primary-50 dark:bg-primary-900/30 rounded-lg" x-show="submitted" x-cloak>
              <svg class="w-12 h-12 text-primary-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{text.successTitle}</h3>
              <p class="text-gray-600 dark:text-gray-300">
                {text.successMessage}
              </p>
            </div>

            <input type="text" name="_gotcha" style="display:none" />
            <input type="hidden" name="_subject" value="New contact form submission" />
            <input type="hidden" name="_next" x-bind:value="window.location.href + '?success=true'" />
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
