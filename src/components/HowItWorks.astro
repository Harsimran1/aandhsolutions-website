---
const steps = [
  {
    number: "01",
    title: "Share your idea + goals",
    description: "We listen first—understanding your product vision, audience, and growth plans.",
    icon: "M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
  },
  {
    number: "02", 
    title: "Design & build smart",
    description: "Our engineers balance performance, security, and cost—using AI to optimize workflows and accelerate development.",
    icon: "M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
  },
  {
    number: "03",
    title: "Launch, scale, optimize", 
    description: "We help you roll out faster—and keep improving as your business grows.",
    icon: "M13 10V3L4 14h7v7l9-11h-7z"
  }
];
---

<section class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
        How It Works
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">Three Simple Steps to Success</h2>
      <p class="text-gray-600 dark:text-gray-300">
        Our proven process turns your ideas into high-performance software that scales with your business.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
      {steps.map((step, index) => (
        <div 
          class="text-center slide-up relative" 
          style={`animation-delay: ${index * 200}ms`}
        >
          <!-- Step Number -->
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 font-bold text-xl mb-6">
            {step.number}
          </div>
          
          <!-- Icon -->
          <div class="w-12 h-12 mx-auto mb-4 text-secondary-400 dark:text-secondary-500">
            <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={step.icon}></path>
            </svg>
          </div>
          
          <!-- Content -->
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{step.title}</h3>
          <p class="text-gray-600 dark:text-gray-300">{step.description}</p>
          
          <!-- Connecting Arrow (not on last item) -->
          {index < steps.length - 1 && (
            <div class="hidden md:block absolute top-8 left-full w-12 h-0.5 bg-gradient-to-r from-primary-200 to-primary-300 dark:from-primary-800 dark:to-primary-700 transform -translate-x-6">
              <div class="absolute right-0 top-0 w-2 h-2 bg-primary-300 dark:bg-primary-700 rounded-full transform translate-x-1 -translate-y-0.75"></div>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>